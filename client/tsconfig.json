{
    "compilerOptions": {
      "module": "es6",
      "target": "es5",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "allowJs": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "paths": {
          "*": ["src/*"],
        },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
}